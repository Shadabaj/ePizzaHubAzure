{
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Error"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "wwwroot\\Logs\\log.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "outputTemplate": "{UtcTimestamp:yyyy-MM-dd } {Message}{NewLine:1}{Exception:1}",
          "rollingInterval": "Hour",
          "shared": true
        }

      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "DbConnection",
          "sinkOptionsSection": {
            "tableName": "Logs",
            "schemaName": "dbo",
            "autoCreateSqlTable": true
          },
          "restrictedToMinimumLevel": "Error"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "ApplicationName": "Serilog.ePizzaHub"
    }
  },
  "AllowedHosts": "*",
  "KeyVault": {
    "VaultUri": "https://vaultepizzahub.vault.azure.net/"
  },
  "ConnectionStrings": {
    "DbConnection": "<Azure SQL Connection>",
    "RedisCache": "<Azure Redis Cache>",
    "ServiceBus": "<Azure Service Bus>"

  },
  "Storage": {
    "Connection": "<Azure Storage Container Blob Storage>",
    "ImageAddress": "<Azure storage url>",
    "Container": "images"
  },
  "RazorPay": {
    "Key": "<RazorPay Key>",
    "Secret": "<Razor Pay Secret>"
  },
  "ApplicationInsights": {
    "ConnectionString": "<Application Insight Resource url>"
  }
}
